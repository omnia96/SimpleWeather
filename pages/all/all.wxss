@import "/fonts/freecns.wxss";
@import "/themes/themes.wxss";
.bar{
    display: flex;
    height: 15vw;
    margin: 2vw;
    align-items: center;
    border-radius: 1.5vw;
    text-align: center;
}
.date{
    /* width: 20vw; */
    display: flex;
    flex-direction: column;
    font-size: 12px;
    text-align: start;
    padding: 1vw;
}
.date_start{
    display: flex;
    font-size: 14px;
    line-height: 14px;
    /* justify-content: center; */
    align-items: center;
}
.weather{
    /* width: 25vw; */
    flex: 1;
}
.weatherIcon{
    width: 10vw;
}
.wind{
    flex: 1;
    font-size: 12px;
}
.tem{
    /* flex: 1; */
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 1vw;
    
}
.temMax, .temMin{
    font-size: 16px;
    display: flex;
    align-items: center;
    justify-content:space-between;
    width: 18vw;
}
.note{
    font-size: 10px;
    margin-right: 5px;
}
.ad_bar{
  margin: 2vw;
  padding: 1vw;
  border-radius: 1.5vw;
  /* position:fixed; */
  bottom: 0;
}